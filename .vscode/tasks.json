{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g", //better debug
                "-ggdb3", //better debug
                "${workspaceFolder}/source/*.cpp",
                "-I",
                "${workspaceFolder}/headers",
                "-o",
                "${workspaceFolder}/output/Phonebook.exe",
                "-std=c++20",

                // "-O3" //fast program
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}